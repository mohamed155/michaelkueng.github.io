    <script type="text/javascript">
        function bindIframe()
        {
            // Load the correct iframe at start
            var hash = window.location.hash.split('/');

            if (hash.length > 1)
            {
                goTo(window.location.origin + window.location.pathname + hash[0].slice(1) + '.html#' + hash[1])
            } else if (hash.length === 1 && hash[0] !== "") {
                hash = hash[0].slice(1);
                goTo(window.location.origin + window.location.pathname + hash + '.html', hash)
            }

            // Update the click
            var referenceLink = document.getElementsByClassName('reference-link');

            for (var i = 0, ii = referenceLink.length; i < ii; i++)
            {
                referenceLink[i].addEventListener('click', function(e) {
                    var slug;
                    var url = e.target.href.replace(/(.+)\?q=([\w\-]+)/, function(match, p1, p2) {
                        slug = p2;
                        return p1 + p2 + '.html';
                    });

                    goTo(url, slug);

                    e.preventDefault();
                });
            }

            var subReferenceLink = document.getElementsByClassName('sub-reference-link');

            for (var i = 0, ii = subReferenceLink.length; i < ii; i++)
            {
                subReferenceLink[i].addEventListener('click', function(e) {
                    var slug;
                    var url = e.target.href.replace(/(.+)\?q=([\w\-]+)&a=([\w\-]+)/, function(match, p1, p2, p3) {
                        slug = p2 + '/' + p3;
                        return p1 + p2 + '.html#' + p3;
                    });

                    goTo(url, slug)

                    e.preventDefault();
                });
            }
        };

        function goTo(url, slug)
        {
            if (slug)
            {
                window.location.hash = slug;
            }

            var iframe = document.getElementById('object-definition');
            iframe.src = url;
        };
    </script>
</head>
<body data-spy="scroll" data-target="#navbar" onload="bindIframe()">
